<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="0.00"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/huha"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_click" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="REFER A FRIEND  GET FREE PIZZA"
            android:textColor="#00838f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logo_icon" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="316dp"
            android:background="@drawable/lulu"
            android:layout_weight="4.07" />

        <TextView
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:text="Your Invite Code"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="0.98"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="127dp"
                android:layout_height="68dp"

                android:background="@drawable/leet"
                android:textSize="22sp"
                android:hint="0PTWQ"
                />

            <Button
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"

                android:background="#ffffff"
                android:text="Copy"


                android:textColor="#00838f" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND INVITES"
            android:id="@+id/send"
            android:layout_weight="1"
            android:background="#ef7d00"
            />

    </LinearLayout>




</LinearLayout>