<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#e57d00"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"

        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/pizzuu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_click" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="10dp"
            android:text="PAYMENT DETAILS"
            android:textColor="#00838f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/logo_icon" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR CURRENT CREDIT CARD:"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="40dp"

            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX-XXXX-XXXX-1111"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_gravity="center"

            />




        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="CHANGE CARD DETAILS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#e57d00"
            android:id="@+id/but2"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="125dp"
            android:layout_marginTop="140dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/hs"

            />

    </LinearLayout>



</LinearLayout>